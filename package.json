{
  "name": "desktopapp",
  "version": "1.0.0",
  "main": "src/electron.js",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "react-start": "parcel -p 3000 src/index.html --out-dir build",
    "react-build": "parcel build src/index.html --out-dir build --public-url ./",
    "electron-start": "electron .",
    "electron-build": "electron-builder ",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "npm run clean-build && npm run react-build && npm run electron-build"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "cssnano": "^4.1.10",
    "electron": "^4.1.3",
    "electron-builder": "^20.39.0",
    "sass": "^1.17.2"
  },
  "build": {
    "appId": "com.brivad",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ]
  }
}
